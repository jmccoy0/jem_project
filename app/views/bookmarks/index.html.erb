<div class="page-header">
  <h1>
    Bookmarked Routes
  </h1>
</div>

<div class="row">
  <div class="col-md-6 col-md-offset-3 mb-4">
    <table class="table table-striped table-hover">
      <tr>
        <th>Route</th>
        <th>Date</th>
        <th>Unbookmark?</th>
      </tr>

      <% @my_routes.each do |my_route| %>
      <tr>
        <td><%= my_route.departure.city %> to <%= my_route.arrival.city %></td>
        <td><%= my_route.bookmarks.find_by(:user_id => current_user.id).date %></td>
        <td>
          <form action="/delete_bookmark/<%= my_route.bookmarks.find_by(:user_id => current_user.id).id %>">

            <!-- Label and input for like -->
                <input type="hidden" id="id" name="id" value="<%= my_route.bookmarks.find_by(:user_id => current_user.id).id %>">

                <button class="btn btn-link">
                  <i class="fa fa-bookmark"></i>
                </button>

          </form>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>

<div class="row">
  <div class="col-md-6 col-md-3 mb-4">
    <form action="/create_bookmark" method="post">
      <!-- Hidden input for authenticity token to protect from forgery -->
      <input name="authenticity_token" type="hidden" value="<%= form_authenticity_token %>">

      <!-- Label and input for user_id -->
      <div class="form-group">
        <input type="hidden" id="user_id" name="user_id" placeholder="User" class="form-control" value="<%= current_user.id %>">
      </div>

      <!-- Label and input for route_id -->
      <div class="form-group">
        <input type="hidden" id="route_id" name="route_id" placeholder="Route" class="form-control">
      </div>

      <!-- Label and input for departure -->
      <div class="form-group">
        <label for="departure" class="control-label">
          Departure
        </label>

        <%= select_tag("departure_id", options_from_collection_for_select(Departure.all, :id, :call_letters), :class => "form-control") %>
      </div>

      <!-- Label and input for date -->
      <div class="form-group">
        <label for="arrival" class="control-label">
          Arrival
        </label>

        <%= select_tag("departure_id", options_from_collection_for_select(Arrival.all, :id, :call_letters), :class => "form-control") %>
      </div>

      <!-- Label and input for date -->
      <div class="form-group">
        <label for="date" class="control-label">
          Date
        </label>

        <input type="text" id="date" name="date" placeholder="Enter a  complete date" class="form-control">
        <button class="btn btn-link">
          <i class="fa fa-bookmark-o"></i>
        </button>
      </div>


    </form>
  </div>
</div>
