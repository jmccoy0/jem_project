<div class="page-header">
  <h1>
    Departures
    <a href="/departures/new" class="btn btn-lg btn-success">New Departure</a>
  </h1>
</div>

<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-hover">
      <tr>
        <th>Call letters</th>
        <th>City</th>
        <th>State</th>
        <th>Actions</th>
      </tr>

      <% @departures.each do |departure| %>
      <tr>
        <td><%= departure.call_letters %></td>
        <td><%= departure.city %></td>
        <td><%= departure.state %></td>
        <td>
          <a href="/departures/<%= departure.id %>" class="btn btn-primary">Show</a>
          <a href="/departures/<%= departure.id %>/edit" class="btn btn-warning">Edit</a>
          <a href="/delete_departure/<%= departure.id %>" class="btn btn-danger" rel="nofollow">Delete</a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>
