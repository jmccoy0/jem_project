<!-- Validation failure messages -->
<% if @departure.errors.any? %>
  <% @departure.errors.full_messages.each do |message| %>
    <div class="alert alert-dismissable alert-danger">
      <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
      <%= message %>
    </div>
  <% end %>
<% end %>

<div class="page-header">
  <h3>Add Departure</h3>
</div>

<div class="row">
  <div class="col-md-12">
    <form action="/create_departure" method="post">
      <!-- Hidden input for authenticity token to protect from forgery -->
      <input name="authenticity_token" type="hidden" value="<%= form_authenticity_token %>">

      <!-- Label and input for call_letters -->
      <div class="form-group">
        <label for="call_letters" class="control-label">
          Call letters
        </label>

        <input type="text" id="call_letters" name="call_letters" placeholder="Call letters" class="form-control" value="<%= @departure.call_letters %>">
      </div>

      <!-- Label and input for city -->
      <div class="form-group">
        <label for="city" class="control-label">
          City
        </label>

        <input type="text" id="city" name="city" placeholder="City" class="form-control" value="<%= @departure.city %>">
      </div>

      <!-- Label and input for state -->
      <div class="form-group">
        <label for="state" class="control-label">
          State
        </label>

        <input type="text" id="state" name="state" placeholder="State" class="form-control" value="<%= @departure.state %>">
      </div>

      <button class="btn btn-success">
        Create Departure
      </button>
      or
      <a href="/departures">Cancel</a>
    </form>
  </div>
</div>
