<div class="page-header">
  <h1>
    Photos
  </h1>
</div>

<div class="row">
  <div class="col-md-8 col-md-offset-2">
    <table class="table table-striped table-hover">
      <tr>
        <th>Photo</th>
        <th>Caption</th>
        <th>Actions</th>
      </tr>

      <% @photos.each do |photo| %>
      <tr>
        <td>
        <a href="/photos/<%= photo.id %>"> <img src="<%= photo.source %>" width="300"></a>
        </td>
        <td><%= photo.caption %></td>
        <td>
          <a href="/photos/<%= photo.id %>/edit"><i class="fa fa-pencil-square-o" aria-hidden="true"></i></a>
          <a href="/delete_photo/<%= photo.id %>" rel="nofollow"><i class="fa fa-trash-o" aria-hidden="true"></i></a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>

<div class="col-md-6 col-md-offset-3 mb-4" style="text-align:center">
  <a href="/photos/new">Add a new photo</a>
</div>
