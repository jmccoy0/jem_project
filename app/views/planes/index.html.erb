<div class="page-header">
  <h1>
    Our Fleet
  </h1>
</div>

<div class="row">
  <div class="col-md-8 col-md-offset-2">
    <table class="table table-striped table-hover">

      <tr>
        <td></td>
        <td>Jets We Fly</td>
        <td>Capacity</td>
        <td>Cabin Height</td>
      </tr>

      <% @planes.each do |plane| %>
      <tr>
        <td>
          <img src="<%= plane.photo.source %>" width="300" class="roundrect">
        </td>
        <td><a href="/planes/<%= plane.id %>"><%= plane.model %></a></td>
        <td><%= plane.capacity %> passengers</td>
        <td><%= plane.cabin_height %> ft</td>
      </tr>
      <% end %>
    </table>
  </div>
</div>
