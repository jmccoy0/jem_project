<div class="page-header">
  <h1>
    Planes
    <a href="/planes/new" class="btn btn-lg btn-success">New Plane</a>
  </h1>
</div>

<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-hover">
      <tr>
        <th>Model</th>
        <th>Capacity</th>
        <th>Cabin height</th>
        <th>Photo</th>
        <th>Actions</th>
      </tr>

      <% @planes.each do |plane| %>
      <tr>
        <td><%= plane.model %></td>
        <td><%= plane.capacity %></td>
        <td><%= plane.cabin_height %></td>
        <td><%= plane.photo_id %></td>
        <td>
          <a href="/planes/<%= plane.id %>" class="btn btn-primary">Show</a>
          <a href="/planes/<%= plane.id %>/edit" class="btn btn-warning">Edit</a>
          <a href="/delete_plane/<%= plane.id %>" class="btn btn-danger" rel="nofollow">Delete</a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>
