<div class="page-header">
  <h3>Plane #<%= @plane.id %></h3>
</div>

<div class="row">
  <div class="col-md-12 mb-2">
    <dl class="dl-horizontal">
      <dt>Model</dt>
      <dd><%= @plane.model %></dd>

      <dt>Capacity</dt>
      <dd><%= @plane.capacity %></dd>

      <dt>Cabin height</dt>
      <dd><%= @plane.cabin_height %></dd>

      <dt>Photo</dt>
      <dd><%= @plane.photo_id %></dd>

    </dl>

    <div class="btn-group btn-group-justified">
      <a href="/planes" class="btn btn-primary">
        Back
      </a>
      <a href="/planes/<%= @plane.id %>/edit" class="btn btn-warning">
        Edit
      </a>
      <a href="/delete_plane/<%= @plane.id %>" class="btn btn-danger" rel="nofollow">
        Delete
      </a>
    </div>
  </div>
</div>
