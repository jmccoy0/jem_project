<div class="page-header">
  <h1>
    Pilots
    <a href="/pilots/new" class="btn btn-lg btn-success">New Pilot</a>
  </h1>
</div>

<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-hover">
      <tr>
        <th>Name</th>
        <th>Rank</th>
        <th>Bio</th>
        <th>Photo</th>
        <th>Plane</th>
        <th>Actions</th>
      </tr>

      <% @pilots.each do |pilot| %>
      <tr>
        <td><%= pilot.name %></td>
        <td><%= pilot.rank %></td>
        <td><%= pilot.bio %></td>
        <td><%= pilot.photo_id %></td>
        <td><%= pilot.plane_id %></td>
        <td>
          <a href="/pilots/<%= pilot.id %>" class="btn btn-primary">Show</a>
          <a href="/pilots/<%= pilot.id %>/edit" class="btn btn-warning">Edit</a>
          <a href="/delete_pilot/<%= pilot.id %>" class="btn btn-danger" rel="nofollow">Delete</a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>
