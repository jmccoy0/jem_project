<div class="page-header">
  <div style="text-align:center">
    <h2>
      Welcome to AWM Flies
    </h2>
  </div>

  <div style="text-align:center">
    <h3>
      We have a world-class team, dedicated to getting you to where you need to go. Meet our pilots below!
    </h3>
  </div>
</div>

<% if current_user.id == 1 %>
<div class="row">
  <div class="col-md-8 col-md-offset-2">
    <table class="table table-striped table-hover">
      <% @pilots.each do |pilot| %>
      <tr>
        <td><img class="img-circle" src="<%= pilot.photo.source %>"></td>
        <td><a href="/pilots/<%= pilot.id %>"><%= pilot.name %><a/></td>
        <td><%= pilot.rank %></td>
        <td><a href="/planes/<%= pilot.plane_id %>"><%= pilot.plane.model %></a></td>
        <td>
          <a href="/pilots/<%= pilot.id %>/edit"><i class="fa fa-pencil-square-o" aria-hidden="true"></i></a>
          <a href="/delete_pilot/<%= pilot.id %>" rel="nofollow"><i class="fa fa-trash-o" aria-hidden="true"></i></a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>

<div class="col-md-6 col-md-offset-3 mb-4" style="text-align:center">
  <a href="/pilots/new">Add a new pilot</a>
</div>

<% else %>

<div class="row">
  <div class="col-md-6 col-md-offset-3 mb-4">
    <table class="table table-striped table-hover">
      <% @pilots.each do |pilot| %>
      <tr>
        <td><img class="img-circle" src="<%= pilot.photo.source %>"></td>
        <td><a href="/pilots/<%= pilot.id %>"><%= pilot.name %><a/></td>
        <td><%= pilot.rank %></td>
        <td><a href="/planes/<%= pilot.plane_id %>"><%= pilot.plane.model %></a></td>
        <!-- <td>
          <a href="/pilots/<%= pilot.id %>" class="btn btn-primary">Show</a>
          <a href="/pilots/<%= pilot.id %>/edit" class="btn btn-warning">Edit</a>
          <a href="/delete_pilot/<%= pilot.id %>" class="btn btn-danger" rel="nofollow">Delete</a>
        </td> -->
      </tr>
      <% end %>
    </table>
  </div>
</div>

<% end %>
