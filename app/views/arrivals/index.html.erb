<div class="page-header">
  <h1>
    Airports
  </h1>
</div>

<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-hover">
      <tr>
        <th>Call letters</th>
        <th>City</th>
        <th>State</th>
        <th>Actions</th>
      </tr>

      <% @arrivals.each do |arrival| %>
      <tr>
        <td><a href="/arrivals/<%= arrival.id %>"><%= arrival.call_letters %></a></td>
        <td><%= arrival.city %></td>
        <td><%= arrival.state %></td>
        <td>
          <a href="/arrivals/<%= arrival.id %>/edit"><i class="fa fa-pencil-square-o" aria-hidden="true"></i></a>
          <a href="/delete_arrival/<%= arrival.id %>" rel="nofollow"><i class="fa fa-trash-o" aria-hidden="true"></i></a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>

<div class="col-md-6 col-md-offset-3 mb-4" style="text-align:center">
  <a href="/arrivals/new">Add a new airport</a>
</div>
