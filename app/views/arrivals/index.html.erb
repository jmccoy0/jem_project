<div class="page-header">
  <h1>
    Arrivals
    <a href="/arrivals/new" class="btn btn-lg btn-success">New Arrival</a>
  </h1>
</div>

<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-hover">
      <tr>
        <th>Call letters</th>
        <th>City</th>
        <th>State</th>
        <th>Actions</th>
      </tr>

      <% @arrivals.each do |arrival| %>
      <tr>
        <td><%= arrival.call_letters %></td>
        <td><%= arrival.city %></td>
        <td><%= arrival.state %></td>
        <td>
          <a href="/arrivals/<%= arrival.id %>" class="btn btn-primary">Show</a>
          <a href="/arrivals/<%= arrival.id %>/edit" class="btn btn-warning">Edit</a>
          <a href="/delete_arrival/<%= arrival.id %>" class="btn btn-danger" rel="nofollow">Delete</a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>
